---
export interface Props {
  heading?: string;
  text?: string;
  showExtra?: boolean;
}

const {
  showExtra = false,
  heading = "Welcome to the astro blog",
  text = "build super fast html-firs website using your favorite javascript frameworks build super fast html-firs website using your favorite javascript frameworks build super fast html-firs website using your favorite javascript frameworks",
} = Astro.props as Props;
---

<section class="flex justify-center text-center mt-10">
  <div class="flex flex-col gap-6">
    <h2 class="text-3xl md:text-5xl font-bold">
      {heading}
    </h2>
    <p class="max-w-[500px] mx-auto">
      {text}
    </p>
    {
      showExtra && (
        <>
          <p>is showExtra is true then show this content ....</p>
        </>
      )
    }
  </div>
</section>

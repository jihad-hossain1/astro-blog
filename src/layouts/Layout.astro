---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
export interface Props {
  title?: string;
}
const { title = "Astro Blog" } = Astro.props as Props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      {title}
    </title>
  </head>
  <body
    class="min-h-screen bg-zinc-800 max-w-screen-xl mx-auto text-zinc-50 p-2"
  >
    <Header />
   <div class="min-h-screen">
     <slot />
   </div>
    <Footer />
  </body>
</html>

---
import Card from "../components/Card.astro";
import Layout from "../layouts/Layout.astro";

const posts = await Astro.glob('../posts/*.md')
---


<Layout title="Astro Main Blog">
     <section class="showcase showcase-blog">
      <div class="showcase-text">
        <h1>Astro Blog</h1>
        <p>A simple blog built with Astro</p>
      </div>
    </section>

    <section class="page-content">
      <div class="flex flex-col gap-5">
        {
          posts?.map(post=>(
            <div class="p-4 bg-gray-700">
              <h4>
                {post?.frontmatter.title}</h4>
                <p>
                  {post?.frontmatter.excerpt}</p>
                  <div class="my-4">
                    <a class="bg-sky-700 rounded-lg shadow w-fit px-2 text-sm py-1" href={`/${post?.frontmatter.slug}`}>
                      Read More
                      </a>
                    </div>
              </div>
          ))
        }
        
      </div>
    </section>
</Layout>